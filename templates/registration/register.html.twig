{% extends 'base.html.twig' %}

{% block title %} {{ parent()}}Création de compte {% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <h1 class="my-5 justify-content-center">Je créé mon compte</h1>
    </div>
</div>
    

    <div class="container">
        <div class="row">

                {{ form_start(registrationForm) }}
                    <div class="col-lg-12">
                        {{ form_row(registrationForm.username, {
                            label: 'Pseudo'
                        }) }}
                    </div>
                    <div class="col-lg-12">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de Passe'
                        }) }}
                    </div>
                    <div class="col-lg-12">
                        {{ form_row(registrationForm.agreeTerms, {
                            label: 'Accepter les CGU pour le site'
                        }) }}
                    </div>
                    <div class="offset-4 col-lg-4">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

{% endblock %}
